{
  "manifest_version": 3,
  "name": "AI Command Extension",
  "version": "1.0",
  "description": "SuperCharge your writing with AI",
  "host_permissions": ["http://*/*", "https://*/*"],
  "permissions": ["tabs", "activeTab", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://mail.google.com/*",
        "https://www.linkedin.com/*",
        "https://medium.com/*",
        "https://wordpress.com/*"
      ],
      "js": ["app.js"]
    }
  ]
}

