{
  "manifest_version": 3,
  "name": "AI Command Extension",
  "version": "1.0",
  "description": "Replace popup with a command in Twitter's tweet box",
  "host_permissions": ["http://*/*", "https://*/*"],
  "permissions": ["tabs", "activeTab", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://mail.google.com/*",
        "https://www.linkedin.com/*"
      ],
      "js": ["app.js"]
    }
  ]
}

